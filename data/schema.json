{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "hero_image": {
      "description": "Upload an image for the hero section",
      "format": "image",
      "title": "Hero Image",
      "type": "string"
    },
    "rating": {
      "description": "Content rating",
      "maximum": 5,
      "minimum": 1,
      "title": "Rating",
      "type": "number"
    },
    "rich_content": {
      "description": "Rich HTML content",
      "format": "html",
      "title": "Rich Content",
      "type": "string"
    },
    "tags": {
      "description": "Content tags",
      "items": {
        "enum": [
          "tech",
          "business",
          "lifestyle",
          "travel"
        ],
        "type": "string"
      },
      "title": "Tags",
      "type": "array"
    }
  }
}